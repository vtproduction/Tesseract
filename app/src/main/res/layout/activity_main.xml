<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ADD TRUE"
      android:id="@+id/btnAddTrue"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ADD FALSE"
      android:id="@+id/btnAddFalse"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="VIEW ALL"
      android:id="@+id/btnViewAll"/>
  <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="VIEW ACTIVE"
          android:id="@+id/btnViewActive"/>

  <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="CHANGE NAME"
          android:id="@+id/btnChangeName"/>
  <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="SET ACTIVE"
          android:id="@+id/btnSetActive"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="DELETE ALL"
      android:id="@+id/btnDeleteAll"/>

</LinearLayout>